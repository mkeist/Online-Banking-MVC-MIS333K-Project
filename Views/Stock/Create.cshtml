@model Team_4_Project.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                <input asp-for="StockName" class="form-control" />
                <span asp-validation-for="StockName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TickerSymbol" class="control-label"></label>
                <input asp-for="TickerSymbol" class="form-control" />
                <span asp-validation-for="TickerSymbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockType" class="control-label"></label>
                <select asp-for="StockType" asp-items="Html.GetEnumSelectList<StockType>()" class="form-control"></select>
                <span asp-validation-for="StockType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPrice" class="control-label"></label>
                <input asp-for="CurrentPrice" class="form-control" />
                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockFee" class="control-label"></label>
                <input asp-for="StockFee" class="form-control" />
                <span asp-validation-for="StockFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
