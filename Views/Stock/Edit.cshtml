@model Team_4_Project.Models.Stock

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StockID" />
            <div class="form-group">
                <label asp-for="StockName" class="control-label"></label>
                @Html.DisplayFor(Model => Model.StockName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TickerSymbol" class="control-label"></label>
                @Html.DisplayFor(Model => Model.TickerSymbol, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="StockFee" class="control-label"></label>
                @Html.DisplayFor(Model => Model.StockFee, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="StockType" class="control-label"></label>
                @Html.DisplayFor(Model => Model.StockType, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="CurrentPrice" class="control-label"></label>
                <input asp-for="CurrentPrice" class="form-control" />
                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update Price" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
