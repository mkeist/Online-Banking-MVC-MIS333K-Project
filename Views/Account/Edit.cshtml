@model Team_4_Project.Models.Account

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountID" />
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                @Html.DisplayFor(model => model.AccountNumber)
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <input asp-for="AccountName" class="form-control" />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Status)
                @Html.DisplayFor(model => model.Status)

            </div>
            @if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
            {
                <label class="radio">@Html.RadioButtonFor(model => model.Status, Status.Active) Activate</label><br />
                <label class="radio">@Html.RadioButtonFor(model => model.Status, Status.Inactive) Deactivate</label><br />
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


