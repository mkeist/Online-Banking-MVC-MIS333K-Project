@model Team_4_Project.Models.Disputes

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Disputes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @*<input type="hidden" asp-for="TransactionID" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.Transaction.TransactionID)
            <div class="form-group">
                <label asp-for="DisputeComment" class="control-label"></label>
                <input asp-for="DisputeComment" class="form-control" />
                <span asp-validation-for="DisputeComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAmount" class="control-label"></label>
                <input asp-for="CorrectAmount" class="form-control" />
                <span asp-validation-for="CorrectAmount" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RequestDelete" /> @Html.DisplayNameFor(model => model.RequestDelete)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

