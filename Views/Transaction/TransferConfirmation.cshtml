@model Team_4_Project.Models.ViewModels.TransferViewModel
@{
    Layout = "_Layout";
}

<div>
    <h4>Confirm Transfer?</h4>
</div>
<div>
    <h5>Transfer Details</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromAccountID)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.FromAccountName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToAccountID)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.ToAccountName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransferAmount)
        </dt>
        <dd class="col-sm-10">
            @*@ViewBag.TransferComments*@
            @Html.DisplayFor(model => model.TransferAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransferDate)
        </dt>
        <dd class="col-sm-10">
            @*@ViewBag.TransferComments*@
            @Html.DisplayFor(model => model.TransferAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TransferComments)
        </dt>
        <dd class="col-sm-10">
            @*@ViewBag.TransferComments*@
            @Html.DisplayFor(model => model.TransferComments)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="TransferConfirmed" class="btn btn-primary">Confirm</a>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</div>