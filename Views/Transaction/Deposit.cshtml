@model Team_4_Project.Models.Transaction

@{
    ViewData["Title"] = "Deposit";
}

<h1>Deposit</h1>

<h4>Deposit to account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownList("SelectedAccount", (SelectList)ViewBag.GetAllUsersAccounts, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="control-label">Deposit Amount:</label>
                <input asp-for="TransactionAmount" class="form-control" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Deposit Date:</label>
                <input asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>
            </div>
            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
            {<div class="form-group">
                    <label class="control-label">Comments:</label>
                    <input asp-for="Comments" class="form-control" />
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>