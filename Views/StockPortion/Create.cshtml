@model Team_4_Project.Models.StockPortion

@{
    ViewData["Title"] = "Index";
}

<h2>Buy Stocks</h2>
</p>

<h4>Stock Portion</h4>
<hr />
<font color="red">@ViewBag.ErrorMessage</font>
<p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <dd class="col-sm-10">
                @ViewBag.SelectedStk
            </dd>
            <div class="form-group">
                <label asp-for="ShareNumber" class="control-label"></label>
                <input asp-for="ShareNumber" class="form-control" />
                <span asp-validation-for="ShareNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Get funds from: </label>
                @Html.DropDownList("SelectedAccount", (SelectList)ViewBag.AllAccounts, new { @class = "form-control" })
            </div>

            @Html.HiddenFor(model => model.Account.AccountID)

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>